{
  "scalingPriority": "hyprland",
  "bar": {
    "height": 56,
    "margin": 0,
    "widgetSpacing": 16,
    "padding": { "horizontal": 12, "vertical": 10 },
    "iconSize": 22
  },
  "bar.layouts": {
    "0": {
      "left": ["launcher", "workspaces", "windowtitle"],
      "middle": ["media"],
      "right": ["volume", "microphone", "systray", "clock", "notifications"]
    },
    "1": {
      "left": ["launcher", "workspaces", "windowtitle"],
      "middle": ["media"],
      "right": ["volume", "network", "updates", "clock", "notifications"]
    }
  },
  "bar.launcher": {
    "icon": "",
    "iconSize": 22,
    "showTitle": false,
    "rightClick": "menu:powerdropdown",
    "paddingLeft": 0,
    "paddingRight": 10
  },
  "bar.workspaces": {
    "monitorSpecific": true,
    "showWsIcons": true,
    "showApplicationIcons": true,
    "applicationIconOncePerWorkspace": true,
    "numbered_active_indicator": "underline",
    "showAllActive": false,
    "pillHeight": 28,
    "pillWidth": 36,
    "fontSize": 18,
    "spacing": 10
  },
  "bar.windowtitle": { "custom_title": true, "label": true, "icon": true, "truncation": true, "class_name": true, "truncation_size": 50, "fontSize": 18, "iconSize": 20 },
  "bar.media":       { "truncation_size": 80, "fontSize": 18, "iconSize": 20 },
  "bar.notifications": { "show_total": false, "hideCountWhenZero": false, "fontSize": 18, "iconSize": 20 },
  "bar.clock":       { "showTime": true, "format": "%a %b %d  %I:%M %p", "showIcon": true, "fontSize": 18, "iconSize": 20 },
  "bar.network":     { "label": true, "showWifiInfo": true, "fontSize": 18, "iconSize": 20 },
  "bar.volume":      { "label": true, "fontSize": 18, "iconSize": 20 },
  "bar.microphone":  { "label": true, "fontSize": 18, "iconSize": 20 },
  "bar.battery":     { "label": true, "hideLabelWhenFull": true, "fontSize": 18, "iconSize": 20 },
  "bar.systray":     { "iconSize": 20, "iconSpacing": 6 },
  "menus.transition": "crossfade",
  "menus.transitionTime": 150,
  "menus.dashboard": {
    "directories.enabled": false,
    "stats": { "enabled": true, "enable_gpu": false, "interval": 2000 },
    "powermenu": {
      "avatar": { "name": "Rock @ Sisyphus", "image": "/home/rock/Downloads/My ChatGPT image.png" },
      "sleep": "systemctl suspend",
      "logout": "hyprctl dispatch exit",
      "reboot": "systemctl reboot",
      "shutdown": "systemctl poweroff",
      "confirmation": true
    },
    "controls.enabled": false,
    "shortcuts.left.shortcut1": { "command": "brave", "tooltip": "Brave" },
    "shortcuts.left.shortcut4": { "tooltip": "Screenshot", "command": "bash -c \"/usr/share/hyprpanel/scripts/snapshot.sh\"", "icon": "󰄀" },
    "recording.path": "$HOME/Videos/Screen Recs",
    "profile.size": "17.5em"
  },
  "theme": {
    "bar": {
      "location": "top",
      "layer": "top",
      "enableShadow": false,
      "border": { "location": "none", "color": "#2a2420" },
      "transparent": false,
      "opacity": 88,
      "floating": false,
      "background": "#1c1917",
      "buttons": {
        "style": "split",
        "enableBorders": false,
        "windowtitle": { "enableBorder": false },
        "volume": { "enableBorder": false },
        "network": { "enableBorder": false },
        "bluetooth": { "enableBorder": false },
        "clock": { "enableBorder": false },
        "media": { "enableBorder": true },
        "notifications": { "enableBorder": true }
      },
      "menus": {
        "enableShadow": true,
        "background": "#1c1917",
        "opacity": 92,
        "border": { "color": "#2a2420" },
        "cards": "#2a2420",
        "text": "#e8e0d5",
        "label": "#d9b47a",
        "feinttext": "#6c625a",
        "menu": { "dashboard": { "scaling": 110 } }
      }
    },
    "notification": {
      "scaling": 100,
      "close_button": { "label": "#1c1917", "background": "#d5a67a" },
      "text": "#e8e0d5",
      "background": "#2a2420",
      "border": "#2a2420",
      "label": "#d9b47a",
      "time": "#8a7f74",
      "actions": { "text": "#1c1917", "background": "#d9b47a" }
    },
    "osd": {
      "label": "#d9b47a",
      "icon": "#1c1917",
      "icon_container": "#d9b47a",
      "bar_container": "#1c1917",
      "bar_color": "#d9b47a",
      "bar_empty_color": "#2a2420",
      "bar_overflow_color": "#e29d7a",
      "border": { "color": "#7fb58a" }
    },
    "font": {
      "name": "FantasqueSansM Nerd Font Propo",
      "label": "FantasqueSansM Nerd Font Propo Bold Italic",
      "style": "italic"
    },
    "matugen": false
  }
}
